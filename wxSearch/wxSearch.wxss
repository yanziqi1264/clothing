.wxSearch{
  position: absolute;
  top: 43rpx;
  left: 0;
  width: 100%;
  height: 100%;
  border-top: 1rpx #eee solid;
  background-color: rgba(0, 0, 0, 0.2);
}
.wxSearchInner{
  background-color: #fff;
}
.wxSearch-section{
  background-color: #fff;
  padding: 5rpx 24rpx;
  border: 1rpx #eee solid;
}
.wxSearch-pancel{
  display: flex;
  flex-direction: row;
  height: 60rpx;
  margin-top: 15rpx;
}
.wxSearch-input{
  flex: 8; 
  background-color:#fff;
  padding: 5rpx 10rpx;
  font-size:28rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.wxSearch-button{
  flex: 1;
  border: none !important;
  color: #333;
  font-size: 28rpx;
}

.wxSearchTitle{
  display: block;
  padding: 10rpx 5rpx 5rpx 10rpx;
  font-size: 26rpx;
  text-align: center;
}


.wxSearchMindKeyItem{
  padding: 10rpx 5rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 22rpx;
  color: cornflowerblue;
}

.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.wxSearchKeyItem{
  flex: 0 0 20%;
  font-size: 26rpx;
  text-align: center;
  border: 1rpx solid #eee;
  margin: 5rpx;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  font-family: Arial, Helvetica, sans-serif;
}
.wxSearchHistoryItem{
  padding: 10rpx 5rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
}
.wxSearchHistoryItemText{
  flex: 8;
  font-size: 26rpx;
}
.wxSearchHistoryItemDel{
  flex: 1;
  font-size: 26rpx;
  text-align: center;
  padding: 3rpx 5rpx;
  border: 1rpx solid #eee;
  border-radius: 5rpx;
}
.wxSearchHistoryEmpty{
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}
.wxSearchDeleteAllBtn{
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size:26rpx;
}