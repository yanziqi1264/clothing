/* /pages/order-details/index.wxss */

.order-detail-container {
  background-color: #f2f2f2;
  justify-content: initial;
}

.order-status-block {
  width: 100%;
  background: #e6e6e6;
}

.order-status-margin {
  margin: 0 25rpx;
  padding: 24rpx 0;
}

.order-status-txt {
  font-size: 28rpx;
  color: #323232;
  line-height: 40rpx;
  background: url(https://xcx.jacars.com/media/tinyapp/images/trade.png) no-repeat left;
  background-size: 34rpx 40rpx;
  padding-left: 50rpx;
}

.order-span {
  display: flex;
  width: 100%;
  font-size: 24rpx;
  color: #323232;
}

.order-number-lable {
  width: 120rpx;
  margin-left: 50rpx;
}

.order-number {
  flex: 1;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.order-down {
  flex: 1;
  height: 20rpx;
  background: url(https://xcx.jacars.com/media/tinyapp/images/order_down.png) no-repeat right;
  background-size: 36rpx 20rpx;
}

.order-buyer-block {
  width: 100%;
  background: #fff;
  padding: 28rpx 25rpx;
  border-bottom: 1px solid #f2f2f2;
}

.order-buyer {
  display: flex;
  width: 100%;
  font-size: 26rpx;
  color: #333;
  line-height: 36rpx;
}

.order-buyer-lable {
  width: 80rpx;
  margin-left: 50rpx;
  background: url(https://xcx.jacars.com/media/tinyapp/images/buyer.png) no-repeat left;
  background-size: 36rpx 36rpx;
  padding-left: 45rpx;
}

.order-buyer-remarks {
  width: 80rpx;
  margin-left: 50rpx;
  padding-left: 45rpx;
}

.order-linked-buyer {
  width: 100%;
  text-align: center;
  padding: 32rpx 0;
  background-color: #f7f7f7;
  font-size: 28rpx;
  background: url(https://xcx.jacars.com/media/tinyapp/images/wangwang.png) no-repeat 38%;
  background-size: 27rpx 28rpx;
}

.order-detail-goods {
  width: 100%;
  background: #fff;
}

.order-detail-goods-div {
  margin: 0 25rpx;
}

.goods-box {
  width: 100%;
  display: flex;
  border-bottom: 1px solid #f2f2f2;
  padding: 20rpx 0;
}

.goods-box-div {
  margin: 20rpx 25rpx;
  display: flex;
}

.goods-box .goods-img {
  width: 182rpx;
  height: 182rpx;
}

.goods-box .goods-img img {
  width: 100%;
  height: 100%;
}

.goods-info {
  -webkit-box-flex: 1;
  -moz-box-flex: 1;
  width: 100%;
  margin-left: 30rpx;
}

.goods-info-brand {
  font-size: 28rpx;
  color: #202020;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-top: 20rpx;
  line-height: 35rpx;
}

.goods-info-view {
  display: -webkit-box;
  width: 100%;
  margin-top: 33rpx;
  height: 50rpx;
}

.goods-info-price {
  -webkit-box-flex: 3;
  -moz-box-flex: 3;
  font-size: 32rpx;
  color: #ff3d4b;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  line-height: 45rpx;
}

.goods-info-addview {
  flex: 2;
  -webkit-box-flex: 2;
  -moz-box-flex: 2;
  font-size: 28rpx;
  color: #202020;
  line-height: 45rpx;
}

.goods-info-price:before {
  content: '¥ ';
  font-size: 34rpx;
}

.order-freight {
  width: 100%;
  background: #fff;
}

.order-freight-div {
  margin: 0 25rpx;
  display: flex;
  padding: 32rpx 0;
  font-size: 26rpx;
  color: #b2b2b2;
  border-bottom: 1px solid #f2f2f2;
}

.order-freight-txt {
  flex: 1;
  text-align: right;
}

.order-freight-txt::before {
  content: '¥ ';
  font-size: 30rpx;
  font-weight: bold;
}

.order-payment-txt {
  flex: 1;
  text-align: right;
  color: #ff3d4b;
  font-weight: bold;
}

.order-payment-txt::before {
  content: '¥ ';
  font-size: 30rpx;
  font-weight: bold;
}

.buyer-address {
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
}

.buyer-address-div {
  margin: 0 25rpx;
  padding: 24rpx 0;
  border-bottom: 1px solid #f2f2f2;
}

.buyer-address-receiver {
  display: flex;
  background: url(https://xcx.jacars.com/media/tinyapp/images/location.png) no-repeat left;
  background-size: 22rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  height: 30rpx;
}

.receiver-label {
  padding-left: 40rpx;
}

.receiver-mobile {
  flex: 1;
  text-align: right;
}

.address-detail {
  font-size: 24rpx;
  color: #333;
  text-align: left;
  margin-left: 46rpx;
  line-height: 1.5;
  margin-top: 20rpx;
}

.seller-block {
  margin: 0 25rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #f2f2f2;
  font-size: 28rpx;
  color: #333;
  background: url(https://xcx.jacars.com/media/tinyapp/images/seller_remark.png) no-repeat left;
  background-size: 28rpx 28rpx;
  padding-left: 40rpx;
}

.form-box {
  width: 100%;
  background-color: #fff;
}

.row-wrap {
  width: 700rpx;
  height: 84rpx;
  line-height: 84rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  font-size: 26rpx;
  color: #404040;
}

.row-wrap .label {
  width: 160rpx;
}

.row-wrap .label-right {
  flex: 1;
  height: 84rpx;
  line-height: 84rpx;
}

.row-wrap .label-right input {
  height: 100%;
  font-size: 28rpx;
  padding-right: 20rpx;
}

.unfinished-goods {
  margin-top: 20rpx;
}

.row-wrap1 {
  height: 84rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  line-height: 84rpx;
  display: flex;
  font-size: 26rpx;
  color: #404040;
}

.row-wrap1 .label {
  width: 250rpx;
}

.row-wrap1 .label-right {
  flex: 1;
  height: 84rpx;
  line-height: 84rpx;
}

.row-wrap1 .label-right input {
  height: 100%;
  font-size: 28rpx;
  padding-right: 20rpx;
}

.row1 {
  display: flex;
  border-bottom: 1rpx solid #f2f2f2;
  width: 100%;
}
.buy-num {
  width: 164rpx;
  height: 48rpx;
  line-height: 48rpx;
  right: 0rpx;
  bottom: 0;
  display: flex;
  text-align: center;
 
}
.buy-num .jian-btn {
  width: 48rpx;
  font-size: 26rpx;
  color: #202020;
  height: 100%;
  border-left: 1rpx solid #b3b3b3;
  border-bottom: 1rpx solid #b3b3b3;
  border-top: 1rpx solid #b3b3b3;
  border-bottom-left-radius: 30rpx;
  border-top-left-radius: 30rpx;
}

.buy-num .jian-btn.disabled {
  font-size: 26rpx;
  background-color: #f5f5f9;
  border-left: 1rpx solid #b3b3b3;
  border-bottom: 1rpx solid #b3b3b3;
  border-top: 1rpx solid #b3b3b3;
  color: #ccc;
}

.buy-num .jia-btn {
  width: 48rpx;
  font-size: 26rpx;
  color: #202020;
  height: 100%;
  border-right: 1rpx solid #b3b3b3;
  border-bottom: 1rpx solid #b3b3b3;
  border-top: 1rpx solid #b3b3b3;
  border-bottom-right-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.buy-num .jia-btn.disabled {
  background-color: #f5f5f9;
  border-right: 1rpx solid #b3b3b3;
  border-bottom: 1rpx solid #b3b3b3;
  border-top: 1rpx solid #b3b3b3;
  color: #ccc;
}
.buy-num input {
  width: 68rpx;
  height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 26rpx;
  border: 1rpx solid #b3b3b3;
  color: #404040;
}

.jiesuan-box {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height:88rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
  background-color: #ff3d4b;
}

.jiesuan-box .to-pay-btn {
  width:750rpx;
  text-align: center;
  line-height:88rpx;
  background-color: #e64340;
  font-size:28rpx;
  color: #fff;
}
.order-num-txt {
  flex: 1;
}
