/* pages/classify/index.wxss */

.classify-container {
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1rpx solid #f1f1f1;
}
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
}

.nav_left{
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #f7f7f7;
  text-align: center;
}

.nav_left .nav_left_items {
  height:42px;
  line-height:42px;
  border-bottom:.5rpx solid #e6e6e6;
  font-size:16px;
  color: #404040;
}

.nav_left .nav_left_items.active {
  background: #fff;
  color: #ff3d4b;
}

.nav_right {
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 10rpx;
  box-sizing: border-box;

}

.nav_right .nav_right_items {
  width: 100%;
}
.goods-container {
  height: 100%;
}

.goods-big-box {
 border-bottom: 1rpx solid #f1f1f1;
 width: 100%;
  background: #fff;
  padding-bottom: 70rpx;
 }
.goods-box {
  width: 100%;
  display: -webkit-box;
  background: #fff;
  margin-bottom: 20rpx;
 
}

.goods-box .goods-img {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}

.goods-box .goods-img img {
  width: 100%;
  height: 100%;
}

.goods-info {
  -webkit-box-flex: 1;
  -moz-box-flex: 1;
  width: 100%;
  margin-left: 30rpx;
}

.goods-info-brand {
  font-size: 28rpx;
  color: #202020;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 35rpx;
  margin-top: 26rpx;
}

.goods-info-view {
  display: -webkit-box;
  width: 100%;
  margin-top: 33rpx;
}

.goods-info-price {
  -webkit-box-flex: 3;
  -moz-box-flex: 3;
  font-size: 32rpx;
  color: #ff3d4b;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  line-height: 45rpx;
}

.goods-info-addview {
  flex: 2;
  -webkit-box-flex: 2;
  -moz-box-flex: 2;
  height: 45rpx;
  background-size: 45rpx auto;
}

.goods-info-price:before {
  content: 'Â¥ ';
  font-size: 34rpx;
}
.no-more-goods{
  text-align: center;
  font-size: 24rpx;
  padding-bottom:48rpx; 
  color: #999;
}

.buy-num {
  width: 164rpx;
  height: 48rpx;
  line-height: 48rpx;
 
  right:11rpx;
  bottom: 0;
  display: flex;
  text-align: center;
  top: 0rpx;
  margin-top: 0rpx;
  float:right;
}
.buy-num .jian-btn {
  width: 48rpx;
  font-size: 26rpx;
  color: #202020;
  height: 100%;
  border-left: 1rpx solid #b3b3b3;
  border-bottom: 1rpx solid #b3b3b3;
  border-top: 1rpx solid #b3b3b3;
  border-bottom-left-radius: 30rpx;
  border-top-left-radius: 30rpx;
}
 .buy-num input {
  width: 68rpx;
  height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 26rpx;
  border: 1rpx solid #b3b3b3;
  color: #404040;
}
 .buy-num .jia-btn {
  width: 48rpx;
  font-size: 26rpx;
  color: #202020;
  height: 100%;
  border-right: 1rpx solid #b3b3b3;
  border-bottom: 1rpx solid #b3b3b3;
  border-top: 1rpx solid #b3b3b3;
  border-bottom-right-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.product-view{
  display: flex;
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 24rpx;
}
.product-list {
  width: 750rpx;
  margin: 20rpx 24rpx;
  text-align: center;
}

.weui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.weui-flex-item {
  background: #fff;
  width:147rpx;
  background-color: #fff;
