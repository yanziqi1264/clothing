.bodyview {
  height: 100%;
  -webkit-tap-highlight-color: transparent;
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  background: #f8f8f8;
}

.myvault-panel {
  width: 100%;
  background: #db384b;
}

.myvault-panel-padding {
  padding: 80rpx 24rpx;
}

.weui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.weui-flex-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.weui-flex-item-block {
  font-size: 32rpx;
  text-align: center;
  color: #fff;
}

.font-50 {
  font-size: 80rpx;
}

.font-28 {
  font-size: 28rpx;
}

.padding-top-30 {
  padding-top: 30rpx;
}

.padding-top-15 {
  padding-top: 15rpx;
}

.weui-cells {
  margin-top: 0rpx;
  background-color: #fff;
  line-height: 75rpx;
  font-size: 32rpx;
  overflow: hidden;
  position: relative;
}

.weui-cells:after, .weui-cells:before {
  content: " ";
  position: absolute;
  left: 24rpx;
  width: 100%;
  height: 1rpx;
  color: #e4e4e4;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.weui-cell {
  padding: 22rpx 30rpx;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
}

.weui_cells_form .weui_cell_hd {
  padding-right: 0rpx;
}

.weui_label {
  display: block;
  width: 180rpx;
}

.weui_cell_primary {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
}

.weui_input {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 45rpx;
  line-height: 45rpx;
}

.tip {
  font-size: 24rpx;
  color: #999;
  padding: 26rpx 24rpx;
}

.weui-btn-area {
    margin:32rpx 24rpx;
}
.weui-btn {
    height: 88rpx;
    position: relative;
    display: block;
    margin-left:20rpx;
    margin-right: 20rpx;
    padding-left: 14px;
    padding-right: 14px;
    box-sizing: border-box;
    text-align: center;
    text-decoration: none;
    color: #fff;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    overflow: hidden;
    font-size:32rpm;
    line-height:88rpx;
    border-radius:10rpx;
    background-color: #db384b;
}
