<view class="container">
  <!-- 购物车为空页面 -->
  <view class="empty-view">
    <view class="title-box">
      购物车空空如也～
    </view>
    <view class="to-index-btn" bindtap="toIndexPage">
      去逛逛
    </view>
  </view>
  <!-- 购物车列表页面 -->
    <view class="goodsList">
        <view class="a-gooods" wx:for="{{list}}"  wx:key="{{index}}"  >
            <view class="a-goods-conts {{item.active? 'active':''}}"  wx:if="{{item.count > 0}}" bindtap="selectTap" bindtouchstart="touchS" bindtouchmove="touchM" bindtouchend="touchE" data-index="{{index}}"    style="{{item.left}}">
                <view class="goods-info">
                    <view class="img-box">
                        <image src="{{item.pic}}" class="img"/>
                    </view>
                    <view class="text-box">
                        <view class="goods-title">{{item.name}}</view>
                        <view class="goods-price">{{item.totalprice}}</view>
                        <view class="buy-num">
                            <view class="jian-btn {{item.count==1? 'disabled' : ''}}" data-index="{{index}}" catchtap="reduceToShoppingCart"  data-goodid="{{item.id}}" data-goodname="{{item.name}}" data-pic="{{item.pic}}" data-goodprice="{{item.price}}">-</view>
                            <input  type="number" value="{{item.count}}" disabled/>
                            <view class="jia-btn " data-index="{{index}}" catchtap="addToShoppingCart"  data-goodid="{{item.id}}" data-goodname="{{item.name}}" data-pic="{{item.pic}}" data-goodprice="{{item.price}}">+</view>
                        </view>
                    </view>
                </view>
                <view class="delete-btn" data-index="{{index}}" catchtap="delItem">
                  删除
                </view>
            </view>
        </view>
    </view>


  <!--结算tab -->
   <view class="jiesuan-box">
        <view class="left-price">
            <view class="total" hidden="{{noSelect}}">合计：¥ {{totalPrice}}</view>
        </view>
        <view class="to-pay-btn" bindtap="toPayOrder">立即结算</view>
    </view>
</view>