}

.a-gooods {
  width: 100%;
  overflow: hidden;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.a-goods-conts {
  display: flex;
  justify-content: space-between;
  padding-left: 24rpx;
  width: 750rpx;
  box-sizing: border-box;
}

.goods-info {
  display: flex;
  justify-content: space-between;
  width: 750rpx;
  box-sizing: border-box;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f1f1f1;
}

.goods-info .img-box {
  width: 182rpx;
  height: 182rpx;
  overflow: hidden;
}

.goods-info .text-box {
  width: 490rpx;
  position: relative;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 24rpx;
}

.goods-info .text-box .goods-title {
  font-size: 28rpx;
  color: #202020;
  line-height: 35rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-info .text-box .goods-price {
  font-size: 30rpx;
  color: #ff3d4b;
  margin-top: 44rpx;
}

.goods-price::before {
  content: 'Â¥ ';
  font-size: 30rpx;
}

.goods-info .text-box .buy-num {
  width: 164rpx;
  height: 48rpx;
  line-height: 48rpx;
  position: absolute;
  right: 0rpx;
  bottom: 0;
  display: flex;
  text-align: center;
  top: 0rpx;
  margin-top: 95rpx;
}

.goods-info .text-box .buy-num .jian-btn {
  width: 48rpx;
  font-size: 26rpx;
  color: #202020;
  height: 100%;
  border-left: 1rpx solid #b3b3b3;
  border-bottom: 1rpx solid #b3b3b3;
  border-top: 1rpx solid #b3b3b3;
  border-bottom-left-radius: 30rpx;
  border-top-left-radius: 30rpx;
}

.goods-info .text-box .buy-num .jian-btn.disabled {
  font-size: 26rpx;
  background-color: #f5f5f9;
  border-left: 1rpx solid #b3b3b3;
  border-bottom: 1rpx solid #b3b3b3;
  border-top: 1rpx solid #b3b3b3;
  color: #ccc;
}

.goods-info .text-box .buy-num .jia-btn {
  width: 48rpx;
  font-size: 26rpx;
  color: #202020;
  height: 100%;
  border-right: 1rpx solid #b3b3b3;
  border-bottom: 1rpx solid #b3b3b3;
  border-top: 1rpx solid #b3b3b3;
  border-bottom-right-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.goods-info .text-box .buy-num .jia-btn.disabled {
  background-color: #f5f5f9;
  border-right: 1rpx solid #b3b3b3;
  border-bottom: 1rpx solid #b3b3b3;
  border-top: 1rpx solid #b3b3b3;
  color: #ccc;
}

.goods-info .text-box .buy-num input {
  width: 68rpx;
  height: 48rpx;
  min-height: 48rpx;
  text-align: center;
  font-size: 26rpx;
  border: 1rpx solid #b3b3b3;
  color: #404040;
}

.goods-info .img-box .img {
  width: 182rpx;
  height: 182rpx;
}

.a-goods-conts .delete-btn {
  display: none;
