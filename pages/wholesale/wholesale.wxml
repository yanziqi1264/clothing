
<view class="page">
  <scroll-view scroll-y="true" class="scroll-area">
    <!-- 加搜索框-->
    <view class="weui-search-bar" id="searchBar">
            <form class="weui-search-bar-form">
                <view class="weui-search-bar-box">
                    <view class="weui-icon-search"></view>
                    <input bindtap="searchTap" type="search" class="weui-search-bar-input" id="searchInput" placeholder="搜索" required=""/>
                </view>
            </form>
            <view  style="width:80rpx;margin-top:15rpx;text-align:center" id="searchCancel">
            <image src="../../images/message.png" style="width:42rpx;height:41rpx"></image>
            </view>
    </view>
    <!-- 搜索框结束 -->
    <view class="swiper-container">
      <swiper bindchange="swiperchange" class="swiper_box" vertical="{{vertical}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for-items="{{toplist}}" wx:key="{{index}}">
          <swiper-item>
            <image bindtap="tapBanner" data-id="{{item.id}}" class="swiper-item" src="{{item.attributes.commoditycoverpic}}" mode="aspectFill" width="750rpx" height="350rpx" />
          </swiper-item>
        </block>
      </swiper>
      <view class="dots">
        <block wx:for="{{toplist}}" wx:key="unique">
          <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
        </block>
      </view>
    </view>
    <view class="big-logo">
      <block wx:for-items="{{typelist}}" wx:key="{{index}}">	
        <view class="season-info"  data-typeid="{{item.id}}"  bindtap="gotogoods">
          <image style="width:94rpx; height:90rpx;" src="{{item.realPath}}" mode="aspectFit" />
          <text class="season-text">{{item.name}}</text>
        </view>
      </block>
    </view>

  <!-- 批发 -->
