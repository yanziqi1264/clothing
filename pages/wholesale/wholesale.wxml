 	<view class="big-Title">
      <text>热品推荐</text>
    </view>
    <view class="goods-container">
      <view class="goods-box" wx:for="{{productlist}}"  wx:key="{{index}}" >
          <view class="goods-img ">
            <image src="{{item.attributes.commoditycoverpic}} " class="goods-img" mode="aspectFill" bindtap="toDetailsTap" data-goodid="{{item.id}}"/>
          </view>
          <view class="goods-info">
            <view class="goods-info-brand" bindtap="toDetailsTap" data-goodid="{{item.id}}">
                  {{item.productName}}
            </view>
            <view class="goods-info-view">
              <view class="goods-info-price">
                <text>{{item.attributes.commodityoriginalprice}}</text>
               </view>
                 <view class="goods-info-reduceView" bindtap="reduceToShoppingCart"  data-goodid="{{item.id}}" data-goodname="{{item.productName}}" data-pic="{{item.attributes.commoditycoverpic}}" data-goodprice="{{item.attributes.commodityoriginalprice}}">
                </view>
                <view class="count" style=""><text>  {{item.count}}</text></view> 
               <view class="goods-info-addview" data-goodid="{{item.id}}" data-goodname="{{item.productName}}"  bindtap="addToShoppingCart" data-pic="{{item.attributes.commoditycoverpic}}" data-goodprice="{{item.attributes.commodityoriginalprice}}">
               </view>
            </view>
          
  
          </view>
       </view>
    
    </view>
    <view hidden="{{loadingMoreHidden ? true : false}}" class="no-more-goods">没有更多啦</view>
