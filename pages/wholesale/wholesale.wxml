    <!-- 产品列表页调整 -->
     <view class="product-view">
       <view class="product-list">{{productlist.length}}{{productlist.length%2 }}{{productlist.length%2 >0?productlist.length/2+1:productlist.length/2}}
          
    <block wx:for="{{productlist.length%2 >0?productlist.length/2+1:productlist.length/2}}" wx:key="unique" wx:for-index="idx">
          <view  class="weui-flex" >
            <block wx:for="{{productlist}}" wx:key="unique" wx:for-index="idx2">
            <view wx:if="{{idx2 <(idx+1)*2 && idx2 >=idx*2}}" class="weui-flex-item bg" bindtap="toDetailsTap" data-goodid="{{item.id}}" data-selltype="{{item.sellType}}">
