              <view class="product-title"> {{item.productName}}</view>
              <view class="product-price">
              ¥{{item.attributes.commodityoriginalprice}}
              <view class="product-num">销量:360</view>
              </view>
            </view>
          </block>
          </view>
       </block>
       </view>
    </view>

