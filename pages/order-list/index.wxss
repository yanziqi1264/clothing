.order-container {
  width: 100%;
  background-color: #f2f2f2;
}

.status-box {
  width: 100%;
  height: 82rpx;
  line-height: 82rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fcfcfc;
  border-bottom: 1px solid #e6e6e6;
}

.status-box .status-label {
  width: 250rpx;
  height: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #404040;
  box-sizing: border-box;
  position: relative;
}

