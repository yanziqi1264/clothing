/* pages/goods-detail/index.wxss */

.container {
  background-color: #fff;
  min-height: 100%;
  padding-top: 0rpx;
  padding-bottom: 98rpx;
}

.swiper-container {
  width: 100%;
  position: relative;
}

.swiper_box {
  width: 100%;
  height: 750rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 750rpx;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 50%;
  transition: all 0.6s;
  opacity: 0.8;
}

.swiper-container .dots .dot.active {
  opacity: 0.8;
  background: #ff3d4b;
}

.goods-info {
  width: 100%;
  border-bottom: 1rpx solid #f1f1f1;
}

.goods-info .row1 {
  width: 100%;
  display: -webkit-box;
  margin-top: 20rpx;
  margin-left: 24rpx !important;
}

.row1 .goods-name {
  -webkit-box-flex: 1;
  -moz-box-flex: 1;
  width: 100%;
}

.goods-name-view {
  font-size: 28rpx;
  color: #202020;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 38rpx;
}

.row1 .goods-share {
  -webkit-box-flex: 4;
  -moz-box-flex: 4;
  width: 100%;
  margin-right: 24px;
  position: relative;
}

.goods-share image {
  width: 42rpx;
  height: 42rpx;
}

.goods-share .sharelabel {
  font-size: 20rpx;
  color: #666;
}

.goods-share-relative {
  position: absolute;
  right: 0;
  top: 0;
}

.row2 {
  margin-top: 15rpx;
  width: 100%;
  margin-left: 24rpx;
  margin-bottom: 20rpx;
}

.goods-price::before {
  content: 'Â¥ ';
  font-size: 30rpx;
}

.row2 .goods-price {
  font-size: 42rpx;
  color: #ff3d4b;
}

.month-sales {
  width: 100%;
  display: -webkit-box;
  border-bottom: 1rpx solid #f1f1f1;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  padding-left: 24rpx;
}

.month-sales .month-num {
  -webkit-box-flex:1;
  -moz-box-flex:1;
  width: 100%;
  font-size: 24rpx;
  color: #404040;
 
}
.month-sales .goods-place{
  -webkit-box-flex:4;
  -moz-box-flex:4;
  width: 100%;
  font-size: 24rpx;
  color: #404040;
  margin-right: 24rpx;
  text-align: right;
}
